<Pane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.oldschool908.Project.controllers.NASAController">
   <children>
      <GridPane layoutX="8.0" prefHeight="175.0" prefWidth="246.0">
