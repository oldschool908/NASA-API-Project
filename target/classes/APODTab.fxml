          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="NASA Astronomy Picture of the Day" />
            <Label text="Date: (YYYY-MM-DD)" GridPane.rowIndex="1" />
            <TextField fx:id="dateField" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <ImageView fx:id="imageView" fitHeight="319.0" fitWidth="386.0" layoutX="341.0" layoutY="44.0" pickOnBounds="true" preserveRatio="true" />
